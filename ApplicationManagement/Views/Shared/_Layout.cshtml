@{
    string pageName = ViewContext.RouteData.Values["controller"].ToString() +"."+ ViewContext.RouteData.Values["action"].ToString();
}

@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - বরিশাল বিশ্ববিদ্যালয়</title>
    <meta name="description" content="বরিশাল বিশ্ববিদ্যালয়">
    <meta name="keywords" content="University of Barisal,Barisal University,বরিশাল বিশ্ববিদ্যালয়">
    <meta name="author" content="S. M. Abrar Jahin">
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <span>
                        <img src="~/images/University_of_Barisal_logo.png" style="height: 100%;">
                    </span>
                    বরিশাল বিশ্ববিদ্যালয়
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="@(pageName == "Home.Index" ? "active" : "")"><a asp-area="" asp-controller="Home" asp-action="Index">হোম</a></li>
                    <li class="@(pageName == "Offices.Index" ? "active" : "")"><a asp-area="" asp-controller="Offices" asp-action="Index">অফিস</a></li>
                    <li class="@(pageName == "JobCirculars.Index" ? "active" : "")"><a asp-area="" asp-controller="JobCirculars" asp-action="Index">জব সার্কুলার</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="@(pageName == "Home.About" ? "active" : "")"><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li class="@(pageName == "Home.Contact" ? "active" : "")"><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1 class="mt-5">@ViewData["Title"]</h1>
        <hr />
        @RenderBody()
        <hr />
        <footer class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="list-group col-md-4">
                        <a href="https://www.omicronlab.com/blog/tips-and-tricks/fix-bengali-display-problem-google-chrome/" target="_blank" class="list-group-item">Problem Seeing Bengali</a>
                        <a href="https://www.omicronlab.com/avro-keyboard-download.html" target="_blank" class="list-group-item">Writing Bengali With Software</a>
                        <a href="https://www.google.com/intl/bn/inputtools/try/" target="_blank" class="list-group-item">Writing Bengali With Online Tool</a>
                    </div>
                    <div class="list-group col-md-4">
                        <a href="mailto:ajahin.bu@gmail.com?Subject=Job%20Portal%20Issue" target="_top" class="list-group-item"><span class="glyphicon glyphicon-envelope"/> Send Mail For Any Issue</a>
                        <a href="tel:+8801822804636" target="_blank" class="list-group-item"><span class="glyphicon glyphicon-phone-alt" /> Call For Solution</a>
                    </div>
                    <div class="col-md-4">
                        <p class="muted pull-right">© @DateTime.UtcNow.Year.ToString() - বরিশাল বিশ্ববিদ্যালয় - All rights reserved</p>
                        <environment names="Development">
                            PageName=>@pageName
                        </environment>
                    </div>
                </div>
            </div>
        </footer>
        <!--/.Footer-->
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
