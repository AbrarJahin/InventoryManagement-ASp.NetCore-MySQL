@model ApplicationManagement.ViewModel.LoginView

@{
    ViewData["Title"] = "সিস্টেমে লগইন করুন";
}

<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="col-md-10 col-md-offset-1">
            <h2 class="text-center">Login</h2>
        </div>
        <div class="col-md-10 col-md-offset-1">
            <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-2" for="inputUser">User Name</label>
                    <div class="col-md-8">
                        <input type="text" placeholder="User Name" class="form-control" name="user_name">
                    </div>
                </div>
                <div class="form-group">
                    <label class="text-center control-label col-md-2" for="inputPassword">Password</label>
                    <div class="col-md-8">
                        <input type="password" placeholder="Password" class="form-control" name="password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="remember" />
                                Remember Me
                            </label>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="col-md-10 col-md-offset-3 btn-group">
                        <button class="center-block btn btn-success" type="submit" name="remember_me">Sign In (লগ ইন করুন)</button>
                        <a asp-action="Register" asp-controller="Account" class="btn btn-info">
                            <span class="glyphicon glyphicon-list-alt"></span> Register
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}