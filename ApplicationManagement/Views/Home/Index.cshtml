@{
    ViewData["Title"] = "মূল পাতা";
}

<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="col-md-10 col-md-offset-1">
            <h2 class="text-center">Login</h2>
        </div>
        <div class="col-md-10 col-md-offset-1">
            <form action="login.html" class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-2" for="inputUser">User Name</label>
                    <div class="col-md-8">
                        <input type="text" placeholder="User Name" class="form-control" name="user_name">
                    </div>
                </div>
                <div class="form-group">
                    <label class="text-center control-label col-md-2" for="inputPassword">Password</label>
                    <div class="col-md-8">
                        <input type="password" placeholder="Password" class="form-control" name="password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="remember" />
                                Remember Me
                            </label>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="col-md-10 col-md-offset-1">
                        <button class="center-block btn btn-primary" type="submit" name="remember_me">Sign in</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>