@model ApplicationManagement.DbModel.Entry

@{
    ViewData["Title"] = "নতুন প্রোডাক্ট যোগ";
}

<form asp-action="Create" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>

    <fieldset class="fieldset-bordered">
        <legend class="legend-bordered">সরবরাহকারীর অংশ</legend>
        <div class="row">

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EntryDate" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <input type="text" asp-for="EntryDate" class="form-control DatePicker" />
                        <span asp-validation-for="EntryDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="InitialCount" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <input asp-for="InitialCount" class="form-control" />
                        <span asp-validation-for="InitialCount" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NameOfSupplier" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <input asp-for="NameOfSupplier" class="form-control" />
                        <span asp-validation-for="NameOfSupplier" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AddressOfSupplier" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <textarea asp-for="AddressOfSupplier" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="AddressOfSupplier" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DescriptionOfProduct" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <textarea asp-for="DescriptionOfProduct" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="DescriptionOfProduct" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NumberOfSuppliedProduct" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <input asp-for="NumberOfSuppliedProduct" class="form-control" />
                        <span asp-validation-for="NumberOfSuppliedProduct" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SuppliedProductUnitPrice" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <input asp-for="SuppliedProductUnitPrice" class="form-control" />
                        <span asp-validation-for="SuppliedProductUnitPrice" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SuppliedProductTotalPrice" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <input asp-for="SuppliedProductTotalPrice" class="form-control" />
                        <span asp-validation-for="SuppliedProductTotalPrice" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TotalNoOfProductAfterInserted" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <input asp-for="TotalNoOfProductAfterInserted" class="form-control" />
                        <span asp-validation-for="TotalNoOfProductAfterInserted" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    <fieldset class="fieldset-bordered">
        <legend class="legend-bordered">ব্যবহারকারীর অংশ</legend>
        <div class="row">

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ReceiveDate" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <input type="text" asp-for="ReceiveDate" class="form-control DatePicker" />
                        <span asp-validation-for="ReceiveDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NameOfUser" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <input asp-for="NameOfUser" class="form-control" />
                        <span asp-validation-for="NameOfUser" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AddressOfUser" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <textarea asp-for="AddressOfUser" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="AddressOfUser" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DemandnoteNo" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <input asp-for="DemandnoteNo" class="form-control" />
                        <span asp-validation-for="DemandnoteNo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NumberOfReceivedProduct" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <input asp-for="NumberOfReceivedProduct" class="form-control" />
                        <span asp-validation-for="NumberOfReceivedProduct" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TotalNoOfProductAfterdeduction" class="control-label col-xs-4 vertical-middle"></label>
                    <div class="col-xs-8">
                        <input asp-for="TotalNoOfProductAfterdeduction" class="form-control" />
                        <span asp-validation-for="TotalNoOfProductAfterdeduction" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    <div class="form-group">
        <div class="col-xs-offset-4 col-xs-4">
            <button type="submit" class="btn btn-primary btn-block">যোগ করুন (Add)</button>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
